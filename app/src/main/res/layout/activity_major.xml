<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_major"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#15991d"
    tools:context="com.example.s525721.myapplication.MajorActivity">

    <Button
        android:text="Edit Profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button6"
        android:background="@drawable/round_small_blue"
        android:textColor="#ffffff"

        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignStart="@+id/button2"
        android:layout_alignEnd="@+id/button2" />



    <Button
        android:text="Hospital Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:id="@+id/button2"
        android:background="@drawable/round_small_button"
        android:textColor="#ffffff"
        android:layout_above="@+id/button5"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Fire Emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@drawable/round_small_button"
        android:textColor="#ffffff"
        android:id="@+id/button5"
         />

    <TextView
        android:text="Report a complaint"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:background="@drawable/circle_side"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Non Emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:id="@+id/button7"
        android:background="@drawable/round_small_black"
        android:textColor="#ffffff"
        android:layout_below="@+id/button6"
        android:layout_centerHorizontal="true" />





</RelativeLayout>
