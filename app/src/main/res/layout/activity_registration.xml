<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/regbg"

    tools:context="com.example.s525721.myapplication.LoginActivity">


    <EditText
        android:drawableLeft="@mipmap/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="#000000"
        android:id="@+id/editText6"
        android:hint="confirm password"
        android:background="#ffffff"
        android:layout_above="@+id/button3"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginBottom="12dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:id="@+id/button3"
        tools:text="Submit"
        android:background="@drawable/circle_side"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:drawableLeft="@mipmap/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="#ffffff"
        android:textColor="#000000"
        android:id="@+id/editText2"
        android:hint="Last name, First Name"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="24sp"
        android:layout_marginBottom="48dp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:layout_above="@+id/editText8"
        android:layout_centerHorizontal="true" />

    <EditText
        android:drawableLeft="@mipmap/password"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText4"
        android:hint="password"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText6"
        android:layout_alignEnd="@+id/button3"
        android:layout_marginBottom="11dp" />

    <EditText
        android:drawableLeft="@mipmap/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="#ffffff"
        android:textColor="#000000"
        android:id="@+id/editText8"
        android:hint="919#"
        android:layout_above="@+id/editText2"
        android:layout_alignStart="@+id/editText3" />

    <EditText
        android:drawableLeft="@mipmap/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:hint="abc@mail.com" />


</RelativeLayout>
