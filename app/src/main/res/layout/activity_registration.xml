<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="100dp"
    android:background="@mipmap/regbg"

    tools:context="com.example.s525721.myapplication.LoginActivity"
    >


    <TextView
        android:text="Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="34sp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:drawableLeft="@mipmap/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:background="#ffffff"
        android:textColor="#000000"
        android:id="@+id/editText8"
        android:hint="919######"


        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <EditText
        android:drawableLeft="@mipmap/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:background="#ffffff"
        android:textColor="#000000"
        android:id="@+id/editText2"
        android:hint="Last name, First Name"
        android:layout_below="@id/editText8"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:drawableLeft="@mipmap/user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:hint="abc@mail.com" />

    <EditText
        android:drawableLeft="@mipmap/password"

        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText4"
        android:hint=" password"
        android:textColor="#000000"
        android:background="#ffffff"
        android:paddingRight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"

        android:layout_marginBottom="11dp"
        android:paddingLeft="4dp"
        />

    <EditText
        android:drawableLeft="@mipmap/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="#000000"
        android:id="@+id/editText6"
        android:hint=" confirm password"
        android:background="#ffffff"
        android:layout_below="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginBottom="12dp"
        android:layout_alignParentEnd="true"
        android:paddingLeft="4dp"
        />




    <Button
        android:text="RESET"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:id="@+id/buttonR"
        tools:text="RESET"
        android:background="@drawable/circle_side"
        android:textColor="#ea0e3a"

        android:layout_toRightOf="@+id/button3"
        android:layout_below="@+id/editText6"

        android:layout_marginLeft="10dp" />

    <Button
        android:text="Submit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:id="@+id/button3"
        tools:text="Submit"
        android:background="@drawable/circle_side"
        android:textColor="#ff2344"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editText6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <Button
        android:text="Forgot Password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPassword"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button3"
        android:background="@drawable/round_sides_white"
        android:layout_centerHorizontal="true"
        />

    <ImageButton android:id="@+id/passwordPolicy"
        android:text="Policy"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/passpolicy2"
        android:layout_alignBottom="@+id/editText4"
        android:layout_toEndOf="@+id/editText4" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:padding="15dp"
        android:id="@+id/popLayout"
        android:background="#ced0e2">

        <TextView
            android:text="Password Policy:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@color/colorAccent" />

        <TextView
            android:text="1. Min characters: 8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <TextView
            android:text="2. Max characters: 20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" />

        <TextView
            android:text="3. Atleast 1 capital, 1 number, 1 special character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:text="4. Min 1 small character" />

        <Button
            android:text="OK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/popCancelBTN"
            android:onClick="popCancel"
            android:background="@color/colorAccent" />
    </LinearLayout>

</RelativeLayout>
