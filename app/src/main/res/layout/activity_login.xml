<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/regbg"


    >

    <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"

        android:drawableLeft="@mipmap/pass"
        android:hint="Password"
        android:textColor="#000000"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#999"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"

        android:drawableLeft="@mipmap/user"
        android:hint="919#"
        android:textColor="#000000"
        android:paddingLeft="0dp"
        android:drawablePadding="5dp"
        android:textColorHint="#999"
        android:paddingTop="0dp"
        android:layout_marginBottom="51dp"
        android:layout_alignBottom="@+id/editText7"
        android:layout_alignStart="@+id/editText7" />

    <TextView
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginLBL"
        android:textSize="24sp"
        android:lineSpacingExtra="8sp"
        android:fontFamily="serif"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <Button
        android:text="Login"
        android:layout_width="180dp"

        android:layout_height="40dp"
        android:id="@+id/button4"
        tools:text="Login"
        android:textColor="#000000"
        android:background="@drawable/circle_side"
        android:layout_below="@+id/editText7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:text="register here"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:background="@drawable/circle_side"
        android:id="@+id/register"
        android:layout_alignTop="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="53dp" />

    <Button
        android:text="Forgot password?"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/forgotBTN"
        android:background="@drawable/circle_side"

        android:layout_below="@+id/register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

</RelativeLayout>
