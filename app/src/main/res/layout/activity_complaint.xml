    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conatactsBTN"
        tools:text="Emergency Phone numbers?"
        android:layout_below="@+id/submitReportBTN"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_side"
        android:textColor="#0930f1"
        android:text="Emergency Phone numbers?" />



    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:id="@+id/submitReportBTN"
        android:layout_below="@+id/scrollMultiText"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:background="#000"/>

    <Button
        android:text="Hospital Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/hospitalSearchBTN"
