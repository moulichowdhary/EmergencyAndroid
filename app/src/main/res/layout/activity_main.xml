<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:background="@mipmap/regbg"


    >

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="100dp"
        android:layout_above="@+id/emergencyIBTN"
        android:layout_alignParentRight="true"
        android:id="@+id/logoutBTN"
        android:background="@drawable/circle_side"

        />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/complaintimage"
        android:layout_marginTop="45dp"
        android:id="@+id/complaintIBTN"
        android:layout_below="@+id/emergencyIBTN"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/emergency"
        android:id="@+id/emergencyIBTN"

        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/complaintIBTN" />


</RelativeLayout>